<body>
<h1>Books</h1>

<table>
  <thead>
  <tr>
    <th><h4>Title</h4></th>

    <th><h4>Body</h4></th>

    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
    <% if @books.present? %>
    <% @books.each do |book| %>
    <tr>
     <td><%= book.title %></td>

     <td><%= book.body %></td>

     <td><%= link_to "Show", "/#{book.id}"%></td>

     <td><%= link_to "Edit", edit_book_path(book.id) %></td>

     <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete %></td>
    </tr>

    <% end %>
    <% end %>
  </tbody>

</table>

  <div class="new">
    <h3>New book</h3>
    <% if @book.errors.any? %>
     <%= @book.errors.count %>error prohibited this book being saved:
     <ul>
       <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
       <% end %>
     </ul>
    <% end %>

    <%= form_with model: @book do |f| %>
    <p>Titile<br>
    <%= f.text_field :title %></p>

    <p>Body<br>
    <%= f.text_area :body %></p>

    <div class=action>
      <%= f.submit 'Create Book' %></div>
    <% end %>
  </div>
</body>

