<h1>Books</h1>

<body>
<table>
  <tr>
    <th><h3>Title</h3></th>
    <th><h3>Body</h3></th>
  </tr>

  <tr>
    <% @books.each do |book| %>
  <td><%= book.title %></td>

  <td><%= book.body %></td>

  <td><%= link_to "Show", "/#{book.id}"%>
  <%= link_to "Edit", edit_book_path(book.id) %>
  <%= link_to "Destroy", destroy_book_path(@book.id), method: :delete %></td>
  <% end %>
  </tr>

</table>

  <div class=></div>

  <div class="new">
    <h3>New book</h3>
    <%= form_with model: @book do |f| %>
    <p>Titile</p>
    <%= f.text_field :title %>

    <p>Body</p>
    <%= f.text_area :body %><br>

    <%= f.submit 'Create Book' %>
    <% end %>
  </div>
</body>

