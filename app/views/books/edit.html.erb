<body>
<h1>Editing Book</h1>

<%= form_with model: @book, url: update_book_path(@book.id),method: :patch do |f| %>

<p>Title<br>
<%= f.text_field :title %></p>

<p>Body<br><%= f.text_area :body %></p>

 <div class=action>
    <%= f.submit 'Update Book' %>
 </div>

<% end %>

<p><%= link_to "Show", book_path(@book.id) %>
 | <%= link_to "Back", "/books"%></p>

</body>